@model WebApplication.Models.ReservationsViewModels.EditViewModel

@{
    ViewData["Title"] = "Finalizar";
    Layout = "_LayoutAdmin";
}

<h2 class="mt-5">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RealDateEnd" class="control-label"></label>
                <input asp-for="RealDateEnd" class="form-control" />
                <span asp-validation-for="RealDateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Finalizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>