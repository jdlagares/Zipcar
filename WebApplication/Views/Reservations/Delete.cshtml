@model WebApplication.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}

<h2 class="mt-5">@ViewData["Title"]</h2>
<h3>Esta seguro que deseas eliminar esta reservacion</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plan)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
