@model WebApplication.Models.CarsViewModels.PictureViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Subir imagen";
}

<h2 class="mt-5">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Picture" asp-route-carId="@Model.CarId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CarId" hidden/>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <div class="custom-file mb-2 mr-sm-2">
                    <input asp-for="File" type="file" class="custom-file-input" onchange="$(this).next().after().text($(this).val().split('\\').slice(-1)[0])">
                    <label class="custom-file-label" for="customFile"></label>
                </div>
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Subir" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.CarId" class="btn btn-outline-primary">Cancelar</a>
            </div>
        </form>
    </div>
</div>


