@model WebApplication.Models.Car

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Eliminar carro";
}

<h2 class="mt-5">@ViewData["Title"]</h2>
<h3>Esta seguro que deseas eliminar este carro</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Parking)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Parking.Address)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
    </form>
</div>
